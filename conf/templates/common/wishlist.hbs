<!-- start common/wishlist.hbs -->
<div class="wishlist">
    <button id="wishlist-open-btn" class="hidden-xs wishlist-btn">
        <div class="wishlist-number">{{defaultIfEmpty (size wishlist.lineItems) "0"}}</div>
    </button>
    <div class="wishlist-items hidden">
        <p class="wishlist-title">
            {{i18n "catalog:wishlist.title"}} <span>({{defaultIfEmpty (size wishlist.lineItems) "0"}})</span>
        </p>
        <span class="recently-added-title">{{i18n "catalog:wishlist.recentlyAdded"}}</span>
        <div class="clearfix">
            {{#withReversed wishlist.lineItems}}{{! the last added items should be shown first}}
                {{#withLimit this 3}}
                    {{#each this}}
                        <a href="{{variantUrlFromLineItem this}}">
                            <img class="pull-left img-responsive wishlist-img" src="{{imageUrl variant}}" alt="{{name}}">
                        </a>
                    {{/each}}
                {{/withLimit}}
            {{/withReversed}}
        </div>
        <a href="{{@root.meta._links.myWishlist.href}}" id="wishlist-view-btn" class="btn view-wishlist-btn">
            {{i18n "catalog:wishlist.view"}}
        </a>
    </div>
</div>
<!-- end common/wishlist.hbs -->
