<!-- start my-account-my-orders-order.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead title=(i18n "myAccount:myOrderDetailPage.title")}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="my-orders">
    <div class="container">
      {{> common/messages}}
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{i18n "my-account:myAccount.title"}}</span>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="my-orders-wrapper">
            <div class="row">
              <div class="col-sm-3">
                {{> myaccount/my-account-sidebar myOrdersTab=true}}
              </div>
              <div id="my-account-desktop-content" class="col-sm-9">
                <div class="my-orders-order-content">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="my-orders-title hidden-xs">
                          {{i18n "my-account:myOrders.title"}}
                      </div>
                    </div>
                  </div>
                  <div class="your-order-details-wrapper">
                    <div class="your-order-details-title">{{i18n "my-account:myOrder.title"}}</div>
                    <div class="your-order-details">
                      <span class="your-order-details-titles">{{i18n "my-account:myOrder.orderNumber"}}<br>{{i18n "my-account:myOrder.creationDate"}}</span>
                      <span class="your-order-details-info">{{content.order.orderNumber}}<br>{{formatDateTime content.order.createdAt}}</span>
                    </div>
                    <button onclick="window.print()" class="my-orders-print-receipt-btn hidden-xs">{{i18n "my-account:myOrder.print"}}</button>
                  </div>
                  <div class="row">
                      {{> myaccount/order-address title=(i18n "my-account:myOrder.shippingAddress") address=content.order.shippingAddress}}
                      {{#if content.order.billingAddress}}
                          {{> myaccount/order-address title=(i18n "my-account:myOrder.billingAddress") address=content.order.billingAddress}}
                      {{else}}
                          {{> myaccount/order-address title=(i18n "my-account:myOrder.billingAddress") address=content.order.shippingAddress}}
                      {{/if}}
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="my-orders-order-dark-box">
                        <div class="my-orders-order-dark-box-title">{{i18n "my-account:myOrder.shippingMethod"}}</div>
                          <div>
                              {{content.order.shippingInfo.shippingMethodName}}
                              {{#if content.order.shippingInfo.shippingMethod.obj.description}}- {{content.order.shippingInfo.shippingMethod.obj.description}}{{/if}}
                          </div>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="my-orders-order-dark-box">
                        <div class="my-orders-order-dark-box-title">{{i18n "my-account:myOrder.paymentDetails"}}</div>
                        <div>{{content.order.paymentInfo.payments.0.obj.paymentMethodInfo.name}}</div>
                      </div>
                    </div>
                  </div>
                  <div class="my-orders-order-price-summary-wrapper">
                      {{#each content.order.discountCodes}}
                          <div class="text-right">
                              <span class="my-orders-order-promocode-title">{{i18n "my-account:myOrder.price.discountCode"}}</span>
                              <span class="my-orders-order-promocode">{{discountCode.obj.code}}</span>
                          </div>
                      {{/each}}
                    <div class="text-right">
                        {{> checkout/order-summary/totals cart=content.order}}
                    </div>
                  </div>
                  <div class="order-list-summary-titles-wrapper">
                    <div class="row">
                      <div class="col-sm-6">
                        <div>
                            {{i18n "my-account:myOrder.items.productDescription"}}
                        </div>
                      </div>
                      <div class="col-sm-2">
                        <div class="text-right">
                            {{i18n "my-account:myOrder.items.quantity"}}
                        </div>
                      </div>
                      <div class="col-sm-2">
                        <div class="text-right">
                            {{i18n "my-account:myOrder.items.unitPrice"}}
                        </div>
                      </div>
                      <div class="col-sm-2">
                        <div class="text-right">
                            {{i18n "my-account:myOrder.items.totalPrice"}}
                        </div>
                      </div>
                    </div>
                  </div>
                    {{#each content.order.lineItems}}
                        <div class="order-detail-wrapper">
                            <div class="row">
                                <div class="col-sm-1 col-xs-4 product-img-col">
                                    <img class="img-responsive cart-item-img" src="{{imageUrl variant}}" alt="{{name}}">
                                </div>
                                <div class="col-sm-3 col-xs-8 product-info-text">
                                    <p class="cart-item-name">
                                        <a href="{{variantUrlFromLineItem this}}">{{name}}</a>
                                    </p>
                                    <p class="grey-p">{{variant.sku}}</p>
                                    <!-- TODO MiSc -->
                                    <p class="cart-attributes">
                                        {{#each attributes}}
                                            {{name}}
                                            <span class="black-p" data-model="cartItem.{{key}}">{{value}}</span>
                                            {{#unless @last}}<br>{{/unless}}
                                        {{/each}}
                                    </p>
                                </div>
                                <div class="col-sm-2 col-sm-offset-2 col-xs-12 text-center quantity-counter">
                                    <span class="visible-xs">{{i18n "main:common.quantity"}}:</span>
                                    <span class="quantity-number">{{quantity}}</span>
                                </div>

                                <div class="col-sm-2 col-xs-7">
                                    <div class="text-right cart-item-price">
                                        <span class="visible-xs xs-price-title">{{i18n "main:common.price"}}</span>
                                        {{#if price.discounted.value}}
                                            <span class="discounted-price">{{oldPriceForLineItem this}}</span>
                                        {{/if}}
                                        <span>{{currentPriceForLineItem this}}</span>
                                    </div>
                                </div>
                                <div class="col-sm-2 col-xs-5">
                                    <div class="text-right cart-item-price">
                                        <span class="visible-xs xs-price-title">{{i18n "checkout:total"}}</span>
                                        <span>{{formatPrice totalPrice}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}

                  <div class="order-print-receipt-btn-wrapper">
                    <button onclick="window.print()" class="order-print-receipt-btn">{{i18n "my-account:myOrder.print"}}</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> common/wishlist}} --}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>
<!-- end my-account-my-orders-order.hbs -->
