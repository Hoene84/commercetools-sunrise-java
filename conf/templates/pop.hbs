<!-- start pop.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="pop-page">
    <div id="pop-page" class="container">
      <div class="pop-alert-overlay hidden">
        <div class="pop-alert-wrapper">
          <div class="pop-alert-box">
            <div class="pop-alert-text">
              {{i18n "main:messages.pleaseWait"}}
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 figure-col">
          {{> catalog/pop/banner}}
        </div>
      </div>
      <div class="row row-offcanvas row-offcanvas-left">
        <div class="col-xs-12">
          {{> catalog/breadcrumb}}
        </div>
        <div class="col-sm-12">
          <div class="dark-overlay"></div>

          <!-- Mobile version -->
          <div class="row visible-xs">
            <div class="col-xs-12">
              <ul class="mobile-filter-list clearfix">
                <li class="pull-left">
                  <button type="button" class="offcanvas-btn offcanvas-open" data-toggle="modal" data-target="#sidebar-overlay">
                    {{i18n "catalog:filters.open"}}
                  </button>
                </li>
              </ul>
            </div>
            {{> catalog/pop/filters-sidebar-mobile}}
          </div>
          <!-- End mobile version -->

          <form id="form-filter-products" name="filter-products" action="{{#if category}}{{category.slug}}{{else}}search{{/if}}">
            {{#if searchTerm}}
              <input type="hidden" name="q" value="{{searchTerm}}"/>
            {{/if}}

            <div class="row item-list-pagination">
              {{#if products}}
                <div class="search-results-row">
                  {{> catalog/pop/search-result}}
                </div>
              {{/if}}
              <div class="col-xs-4 hidden-xs text-left">
                <div class="custom-select-wrapper">
                  {{> catalog/pop/sort-selector}}
                </div>
              </div>
              <div class="col-xs-4 hidden-xs text-center custom-pagination">
                <ul class="page-numbers">
                  {{> common/pagination}}
                </ul>
              </div>
              <div class="col-xs-4 hidden-xs text-right">
                {{> catalog/pop/display-selector}}
              </div>
            </div>
            <div class="product-filter hidden-xs">
              {{> catalog/pop/filters-sidebar}}
            </div>
          </form>

          <div id="pop-product-list" class="row">
            {{> catalog/product-list}}
          </div>
          <div class="row">
            <div class="col-sm-9 col-sm-offset-3 col-xs-12 text-center custom-pagination">
              <ul class="page-numbers page-numbers-bottom">
                {{> common/pagination}}
              </ul>
            </div>
          </div>
          <hr class="hr">
          <div class="row">
            <div class="col-sm-12">
              {{> catalog/pop/seo}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{> common/wishlist}}

  {{> common/footer}}
  {{> common/htmlscripts}}
</body>
</html>
<!-- end pop.hbs -->
