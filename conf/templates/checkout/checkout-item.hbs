<!-- start checkout/checkout-item.hbs -->
<div class="order">
  <div class="order-summary-items">
    {{#each content.CARTCART.lineItems}}
      <div class="order-summary-item">
        <div class="row">
          <div class="col-xs-4">
            <div class="order-summary-img">
              <img class="img-responsive" src="{{imageUrl variant}}" alt="{{name}}">
            </div>
          </div>
          <div class="col-xs-8">
            <div class="summary-item-info">
              <span class="checkout-product-name">{{name}}</span>
            </div>
            <div class="sku-code">
              <span>{{variant.sku}}</span>
            </div>
            <div class="checkout-attributes">
                <div class="checkout-attribute-field">
                    <!-- TODO MiSc -->
                {{#each attributes}}
                    <span class="checkout-attribute">{{name}}</span>{{#unless @last}}<br>{{/unless}}
                {{/each}}
                </div>
                <div class="checkout-attribute-field">
                {{#each attributes}}
                    <span>{{value}}</span>{{#unless @last}}<br>{{/unless}}
                {{/each}}
                </div>
            </div>
          </div>
        </div>
        <div class="order-item-price">
          <div class="row">
            <div class="col-xs-4">
              <div class="text-right">
                <span class="text-uppercase pricing-titles">{{i18n "main:common.quantity"}}</span><br>
                <span>{{quantity}} x</span>
              </div>
            </div>
            <div class="col-xs-4">
              <div class="text-right order-item-value">
                <span class="text-uppercase pricing-titles">{{i18n "main:common.price"}}</span><br>
                {{#if price.discounted.value}}<span class="checkout-discounted-price">{{oldPriceForLineItem this}}</span><br>{{/if}}
                <span>{{currentPriceForLineItem this}}</span>
              </div>
            </div>
            <div class="col-xs-4">
              <div class="text-right order-item-value">
                <span class="text-uppercase pricing-titles">{{i18n "checkout:total"}}</span><br>
                <span>{{formatPrice totalPrice}}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
  <div class="checkout-total-price">
  {{#if content.CARTCART.discountCodes}}
    <div class="row">
      <div class="col-lg-8 col-md-7 col-sm-7 col-xs-7">
        <div class="text-right checkout-promo-code">
          <span class="text-uppercase">{{i18n "checkout:promoCodeApplied"}}</span>
        </div>
      </div>
      <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
        <div class="text-right checkout-promo-code">
          {{#each content.CARTCART.discountCodes}}
          <span class="text-uppercase">{{discountCode.obj.code}}</span><br>
          {{/each}}
        </div>
      </div>
    </div>
  {{/if}}

    <div class="row">
      <div class="col-lg-8 col-md-7 col-sm-7 col-xs-7">
        <div class="text-right checkout-price-text">
          <span>{{i18n "checkout:subtotal"}}</span><br>
          <span>{{i18n "checkout:shipping"}}</span>
        </div>
      </div>
      <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
        <div class="text-right checkout-price-digits">
          <span>{{subTotal content.CARTCART}}</span><br>
          <span>{{#if CARTCART.shippingInfo}}{{shippingCosts content.CARTCART}}{{else}}EUR 0,-{{/if}}</span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-8 col-md-7 col-sm-7 col-xs-7">
      <div class="text-right order-tax-total-text">
        <span>{{i18n "main:common.salesTax"}}</span><br>
        <span class="total-order-value">{{i18n "checkout:total"}}</span>
      </div>
    </div>
    <div class="col-lg-4 col-md-5 col-sm-5 col-xs-5">
      <div class="text-right order-tax-total-digits">
        <span>{{salesTaxCartLike content.CARTCART}}</span><br>
        <span class="total-order-value">{{total content.CARTCART}}</span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div>
        <span class="text-uppercase pull-right edit-quantity-order">
            <a href="{{@root.meta._links.cart.href}}">{{i18n "checkout:editMyCart"}}</a>
        </span>
      </div>
    </div>
  </div>
</div>
<!-- end checkout/checkout-item.hbs -->
