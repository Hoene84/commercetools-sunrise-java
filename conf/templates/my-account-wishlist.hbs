<!-- start my-account-wishlist.hbs -->
<!DOCTYPE html>
<html lang="en">

<head>
    {{> common/htmlhead title=(i18n "my-account:myWishlist.title")}}
</head>

<body>
<div class="darkbg hidden"></div>
{{> common/header}}
<div class="my-orders">
    <div class="container">
      {{> common/messages}}
        <div class="my-account-title">
            <span class="my-account-title-text icon-user">{{i18n "my-account:myWishlist.title"}}</span>
            &nbsp;&nbsp;&nbsp;
            <span class="items-total-txt">{{i18n "my-account:myWishlist.itemsTotal" count=(size content.wishlist.lineItems)}}</span>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="my-orders-wrapper">
                    <div class="row">
                        <div id="my-account-desktop-content" class="col-sm-12">
                            <div class="my-orders-order-content">
                                <div class="my-account-wishlist-items-wrapper">
                                    <div class="row">
                                        {{#each content.wishlist.lineItems}}
                                            <div class="col-sm-6 col-md-3">
                                                {{> catalog/product-thumbnail thumbnail=this index=@index wishlist=true}}
                                                {{> wishlist/item-removal-form lineItemId=id}}
                                            </div>
                                        {{/each}}
                                    </div>
                                </div>
                                <div class="my-account-wishlist-pagination-bottom">
                                </div>
                                {{> wishlist/clear-form}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> common/footer}}
{{> common/htmlscripts}}
</body>

</html>
<!-- end my-account-wishlist.hbs -->
