<!-- start catalog/add-to-cart.hbs -->
<form id="form-add-to-cart{{index}}" name="add-to-cart" method="post" action="{{@root.meta._links.addToCart.href}}">
  <input type="hidden" name="csrfToken" value="{{@root.meta.csrfToken}}"/>
  <input type="hidden" name="productId" value="{{content.myproduct.id}}">
  <input type="hidden" name="variantId" value="{{content.myvariant.id}}">

  <div class="row select-row">
    <ul class="list-inline">
        {{> catalog/product-attribute}}
      <li class="size-guide-li">
        {{> catalog/size-guide}}
      </li>
    </ul>
  </div>
  <div class="row">
    <ul class="product-actions-list list-inline">
      <li class="bag-items-li">
        <select value="" name="quantity" class="bag-items" required>
          {{#each @root.meta.bagQuantityOptions}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </li>
      <li>
        <button type="submit" class="add-to-bag-btn text-center">
          <img class="bag-thumb" src="{{@root.meta.assetsPath}}img/hand-bag-2-black-2edd08b27f222728b530d5ad224c1134.png" alt="{{i18n "catalog:cart.add"}}">
          {{i18n "catalog:cart.add"}}
        </button>
      </li>
    </ul>
  </div>
</form>
<!-- end catalog/add-to-cart.hbs -->
